@model PersonResponse
@{
	ViewBag.Title = "Delete Person";
	
}

<h2> Delete person</h2>
<h3>Are you sure to delete this person?</h3>
<div class="center-box">
	<form asp-action="Delete" asp-controller="Persons" method="post">
		@* PersonName Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Name" class="form-label pt">Person Name</label>
			</div>
			<div class="flex-1">
				<input asp-for="PersonName" disabled="disabled" required class="form-input" />
			</div>
		</div>
		
		@* Email Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Email" class="form-label pt">Email</label>
			</div>
			<div class="flex-1">
				<input type="email" asp-for="Email" disabled="disabled" class="form-input" />
			</div>
		</div>

		

		@* Submit button *@
		<div class="form-field flex">
			<div class="w-25">
				
			</div>
			<div class="flex-1">
				<button class="button button-red-back">Delete</button>			
			</div>
		</div>

	</form>
</div>