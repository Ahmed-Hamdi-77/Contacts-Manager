@model PersonAddRequest
@{
	ViewBag.Title = "Create Person";
	
}

<h2> Create person</h2>
<div class="center-box">
	<form asp-action="Create" asp-controller="Persons" method="post">
		@* PersonName Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="PersonName" class="form-label pt">Person Name</label>
			</div>
			<div class="flex-1">
				<input asp-for="PersonName" required class="form-input" />
			</div>
		</div>
		
		@* Email Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Email" class="form-label pt">Email</label>
			</div>
			<div class="flex-1">
				<input type="email" asp-for="Email" class="form-input" />
			</div>
		</div>

		@* Date Of Birth Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="DateOfBirth" class="form-label pt">Date of birth</label>
			</div>
			<div class="flex-1">
				<input  type="date" asp-for="BirthDate" class="form-input" />
			</div>
		</div>

		@* Gender Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label  class="form-label pt">Gender</label>
			</div>
			<div class="flex-1">
				@{
					string[] Genders = (string[])Enum.GetNames(typeof(GenderOptions));
				}
				@foreach(var gender in Genders)
				{					
					<input type="radio" asp-for="Gender" value="@gender" class="ml" />
					<label for="@gender">@gender</label>
				}				
			</div>
		</div>

		@* Country Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="CountryID" class="form-label">Country</label>
			</div>
			<div class="flex-1">
				<select asp-for="CountryId" class="form-input">
					<option value="">Please Select</option>
					@foreach(CountryResponse country in ViewBag.Countries)
					{
						<option value="@country.CountryId">@country.CountryName</option>
					}
				</select>
			</div>
		</div>

		@* Address Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Address" class="form-label pt">Address</label>
			</div>
			<div class="flex-1">
				<textarea asp-for="Address" class="form-input"></textarea>
			</div>
		</div>

		@* RecieveNewsLetter Field *@
		<div class="form-field flex">
			<div class="w-25">
				
			</div>
			<div class="flex-1">
				<input id="RecieveNewsletter" name="RecieveNewsletter" type="checkbox" value="true" />
				<label for="RecieveNewsletter" class="form-label">RecieveNewsletter</label>
			</div>
		</div>

		@* Submit button *@
		<div class="form-field flex">
			<div class="w-25">
				
			</div>
			<div class="flex-1">
				<button class="button button-green-back">Create</button>
				@if(ViewBag.Errors is not null)
				{
					<div class=" text-red ml">
						<ul>

					@foreach (var error in ViewBag.Errors)
					{
						<li class="ml">@error</li>
					}
						</ul>
					</div>
				}
			</div>
		</div>

	</form>
</div>