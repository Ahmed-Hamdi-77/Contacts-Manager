<!Doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/14.29 Assignment-StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="~/group-users.ico">

</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-brand">Contacts Manager</div>
            <ul>
                <li>
                    @if(ViewBag.CurrentUrl=="~/Persons/Index")
                    {
                        <a asp-controller="Persons" asp-action="index" class="nav-active">Persons</a>
                    }
                    else
                    {
                        <a asp-controller="Persons" asp-action="index" >Persons</a>
                    }

                </li>
                <li >
                    @if (ViewBag.CurrentUrl == "~/Countries/UploadCountry")
                    {
                        <a asp-action="UploadCountry" asp-controller="Countries" class="nav-active">Upload Country</a>
                    }
                    else
                    {
                        <a asp-action="UploadCountry" asp-controller="Countries" >Upload Country</a>
                    }
                </li>
            </ul>
            <ul class="nav-right">
                
                @if(User.Identity.IsAuthenticated)
                {
                    <i class="fa-solid fa-user"></i>

                    <li>@User.Identity?.Name</li>
                        <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
                }
                else
                {     <li>
                        @if (ViewBag.CurrentUrl == "~/Account/Register")
                    {
                            <a asp-action="Register" asp-controller="Account" class="nav-active">Register</a>
                    }
                    else
                        {
                            <a asp-action="Register" asp-controller="Account">Register</a>
                        }
                        </li>
                        <li>
                        @if (ViewBag.CurrentUrl == "~/Account/Login")
                        {
                           <a asp-action="Login" asp-controller="Account" class="nav-active">Login</a>
                        }
                        else
                        {
                            <a asp-action="Login" asp-controller="Account">Login</a>
                        }
                        </li>
                   
                }
                </ul>
                           
        </div>
        <div class="page-content">
            @RenderBody()
            

        </div>
    </div>
</body>
</html>