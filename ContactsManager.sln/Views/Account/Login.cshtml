@model LoginDTO
@{
	ViewBag.Title = "Login";
	ViewBag.CurrentUrl = "~/Account/Login";
}

<p>Not registered yet? <a asp-action="Register" asp-controller="Account" class="link-hover">Register</a></p>
<br />
<h2> Login</h2>
<div class="center-box">
	<form asp-action="Login" asp-controller="Account" method="post" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
		@* Sending the ReturnUrl with data to Login action method *@
		
		@* Email Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Email" class="form-label pt">Email</label>
			</div>
			<div class="flex-1">
				<input type="email" asp-for="Email" class="form-input" />
			</div>
		</div>

		@* Password Field *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Password" class="form-label pt">Password</label>
			</div>
			<div class="flex-1">
				<input type="password" asp-for="Password" class="form-input" />
			</div>
		</div>

		
		@* Login button *@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<button class="button button-green-back">Login</button>
				@if (ViewBag.Errors is not null)
				{
					<div class=" text-red ml">
						<ul>

							@foreach (var error in ViewBag.Errors)
							{
								<li class="ml">@error</li>
							}
						</ul>
					</div>
				}
			</div>
		</div>

	</form>
</div>